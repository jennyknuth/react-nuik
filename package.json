{
  "name": "react-nuik",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/nioinnovation/nuik"
  },
  "description": "nio UI Kit for react",
  "scripts": {
    "build": "babel ./components --out-dir ./lib",
    "check": "npm run check:lint && npm run check:types",
    "check:types": "flow check",
    "clean": "rimraf ./lib",
    "check:lint": "npm run check:lint:js",
    "check:lint:js": "eslint ./components",
    "prebuild": "npm run clean",
    "prepublish": "npm run build",
    "pretest": "npm run check",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "chokidar 'components/**/*.js' -c 'npm run build'"
  },
  "author": "n.io <info@n.io>",
  "license": "ISC",
  "dependencies": {
    "classnames": "^2.2.5",
    "react": "^15.4.1",
    "react-css-themr": "^1.7.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-flow-strip-types": "^6.21.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-flowtype": "^2.29.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "flow-bin": "^0.37.4",
    "rimraf": "^2.5.4"
  }
}
